{
    "name": "lava83/ddd-foundation",
    "description": "A robust Domain-Driven Design foundation package for Laravel applications, providing essential building blocks including aggregate roots, domain events, value objects, and shared contracts for clean domain modeling.",
    "type": "library",
    "require-dev": {
        "laravel/pint": "^1.24",
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lava83\\DddFoundation\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Stefan Riedel",
            "email": "stefan.riedel.bo@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "stan": [
            "./vendor/bin/phpstan analyse --memory-limit=5G --configuration=phpstan.neon --no-interaction"
        ],
        "pint": [
            "./vendor/bin/pint --test"
        ],
        "pint-fix": [
            "./vendor/bin/pint"
        ]
    },
    "require": {
        "laravel/framework": "^12.24",
        "giggsey/libphonenumber-for-php": "^9.0",
        "spatie/laravel-data": "^4.18"
    }
}
